<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<metal:main metal:use-macro="templates('Fragments/main.pt').macros['main']">
  <metal:main metal:fill-slot="content">
    <h2>Liste der mit MÃœSLI verwalteten Vorlesungen</h2>

    <table>
      <tr><th>Semester</th><th>Name</th><th>Dozent</th><th>Assistent</th></tr>
      <tr tal:repeat="lecture lectures">
        <td tal:define="term lecture.term">
          ${term[0:4]+('SS' if term[4] == 1 else 'WS') if term else '-'}
        </td>
        <td><a tal:attributes="href request.route_path('lecture_view', lecture_id=lecture.id)">${lecture.name}</a></td>
        <td>${lecture.lecturer}</td>
        <td><a tal:attributes="href 'mailto:'+lecture.assistant.email">${lecture.assistant.last_name}</a></td>
      </tr>
    </table>
    <a tal:condition="request.userInfo.is_assistant" tal:attributes="href request.route_path('lecture_add')">Neue Vorlesung eintragen</a>

  </metal:main>
</metal:main>
