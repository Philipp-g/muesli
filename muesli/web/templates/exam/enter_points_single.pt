<script>/* <![CDATA[ */
  function update_total(row)
  {
    var objs = $$("#row-" + row + " input.points");
    var total = 0;
    var current = 0;

    for (i = 0; i < objs.length; i++) {
      current = parseFloat(objs[i].value.replace(/,/, "."));
      if (!isNaN(current)) {
        total += current;
      }
    }

    return $("total-" + row).value = Number(total).toFixed(2);
  }
/* ]]> */
</script>

